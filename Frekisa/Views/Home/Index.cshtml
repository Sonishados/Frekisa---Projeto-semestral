@model Frekisa.Models.Clientes
@{
    ViewBag.Title = "Página Principal";
}

<script src="~/Content/js/jquery-3.6.0.min.js" type="text/javascript"></script>
<script src="~/Content/js/bootstrap.min.js" type="text/javascript"></script>
<main class="home">
    <div class="lado-a-lado">
        <div>
            <h3 class="Titulo-home">Crédito fácil e juros baixos, <br>só com a Frekisa</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="Cadastro_home">
        <div>
            <h4 id="sub-title">Preencha o formulário para uma análise de crédito</h4>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="nome_cliente">Nome Completo:<br /></label>
            <div>
                @Html.EditorFor(model => model.nome_cliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite seu nome completo", maxlength = "50", required = "required" } })
                @Html.ValidationMessageFor(model => model.nome_cliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="cpf_cliente">CPF:<br /></label>
            <div>
                @Html.EditorFor(model => model.cpf_cliente, new { htmlAttributes = new { @id = "cpf_cliente", @class = "form-control", placeholder = "___.___.___-__", required = "required" } })
                @Html.ValidationMessageFor(model => model.cpf_cliente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="email_cliente">E-mail:<br /></label>
            <div>
                @Html.EditorFor(model => model.email_cliente, new { htmlAttributes = new { @class = "form-control", @type = "email", placeholder = "example@example.com", maxlength = "60", required = "required" } })
                @Html.ValidationMessageFor(model => model.email_cliente, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="lado-a-lado">
            <div class="form-group" style=" margin: 3px">
                <label for="telefone_cliente">Telefone:<br /></label>
                <div>
                    @Html.EditorFor(model => model.telefone_cliente, new { htmlAttributes = new { @class = "form-control", @id = "telefone_cliente", placeholder = "(__) _____-____", required = "required" } })
                    @Html.ValidationMessageFor(model => model.telefone_cliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style=" margin: 3px">
                <label for="renda_cliente">Renda Mensal:<br /></label>
                <div>
                    @Html.EditorFor(model => model.renda_mensal, new { htmlAttributes = new { @class = "form-control", placeholder = "R$", type = "number", maxlength = "20", required = "required" } })
                    @Html.ValidationMessageFor(model => model.renda_mensal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
                Avançar
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Completar Cadastro ?</h4>
                    </div>
                    <div class="modal-body">
                        Após clicar em <b>confirmar</b> seus dados serão enviados ao nosso sistema e entraremos em contato!
                    </div>
                    <div class="modal-footer lado-a-lado">
                        <button type="submit" class="btn btn-success">Confirmar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
        }
    </div>
</main>

<script>
    $(document).ready(function () {
        $("#telefone_cliente").inputmask("mask", { "mask": "(99) 99999-9999" });
        $("#cpf_cliente").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
    });
</script>