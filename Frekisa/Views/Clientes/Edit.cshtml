@model Frekisa.Models.Clientes

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/LayoutModal.cshtml";
}

<h2 class="text-center">Editar Cliente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">Clientes</h4>
        <div class="modal-body" style="display:flex; justify-content:center">
            <div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_cliente)
                <div>
                    <label>Nome do Cliente:</label>
                    <div>
                        @Html.EditorFor(model => model.nome_cliente, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", required = "required" } })
                        @Html.ValidationMessageFor(model => model.nome_cliente, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    <label>CPF:</label>
                    <div>
                        @Html.EditorFor(model => model.cpf_cliente, new { htmlAttributes = new { @id = "cpf_client", @class = "form-control", placeholder = "___.___.___-__", required = "required" } })
                        @Html.ValidationMessageFor(model => model.cpf_cliente, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <label>Telefone:</label>
                    <div>
                        @Html.EditorFor(model => model.telefone_cliente, new { htmlAttributes = new { @class = "form-control", @id = "telefone_cliente", placeholder = "(__) _____-____", required = "required" } })
                        @Html.ValidationMessageFor(model => model.telefone_cliente, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <label>Email:</label>
                    <div>
                        @Html.EditorFor(model => model.email_cliente, new { htmlAttributes = new { @class = "form-control", @type = "email", placeholder = "example@example.com", maxlength = "60", required = "required" } })
                        @Html.ValidationMessageFor(model => model.email_cliente, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <label>Renda Mensal:</label>
                    <div>
                        @Html.EditorFor(model => model.renda_mensal, new { htmlAttributes = new { @class = "form-control", placeholder = "R$", maxlength = "20", required = "required" } })
                        @Html.ValidationMessageFor(model => model.renda_mensal, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <label>Endereço:</label>
                    <div>
                        @Html.EditorFor(model => model.endereco, new { htmlAttributes = new { @class = "form-control", maxlength = "150", required = "required" } })
                        @Html.ValidationMessageFor(model => model.endereco, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer lado-a-lado">
            <button type="submit" value="Save" class="btn btn-success">Salvar</button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index")'">Cancelar</button>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#telefone_cliente").inputmask("mask", { "mask": "(99) 99999-9999" });
            $("#cpf_client").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
        });
    </script>
}
