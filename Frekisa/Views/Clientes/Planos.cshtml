            <h3 style="color:white; padding: 5px 0 5px 0">Plano 2</h3>
        </div>
        <p>Detalhes:</p>
        <p>60x R$ 390,00</p>
        <p>Valor recebido: R$20.000,00</p>
        @if (ViewData["plano"].ToString().Trim() == "2" || ViewData["plano"].ToString().Trim() == "3")
        {
            <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal2" type="button" style="margin-top: 20px">Selecionar</button>

        }
        else
