@model IEnumerable<Frekisa.Models.Clientes>

@{
    ViewBag.Title = "Planos";
}
<h1 class="text-left" style="margin-bottom: 50px"><b>Planos</b></h1>

<h4> Nível de Plano: @ViewData["plano"]    |    Renda Mensal: @ViewData["renda"]</h4>
<br />
<form method="post">
    <div class="col-md-2 col-md-offset-1 text-center" style="background-color:lightgray; padding: 0 20px 20px; border-radius: 15px">
        <div style="background-color: #5D2E8C; border-radius: 10px">
            <h3 style="color:white; padding: 5px 0 5px 0">Plano 1</h3>
        </div>
        <p>Detalhes:</p>
        <p>48x R$ 210,00</p>
        <p>Valor recebido: R$9.000,00</p>
        @if (ViewData["plano"].ToString().Trim() == "0")
        {
            <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal1" type="button" style="margin-top: 20px" disabled>Selecionar</button>

        }
        else
        {
            <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal1" type="button" style="margin-top: 20px">Selecionar</button>

        }
    </div>
    <div class="col-md-2 col-md-offset-1 text-center" style="background-color:lightgray; padding: 0 20px 20px; border-radius: 15px">
